# Server Configuration
PORT=3000

# Environment
NODE_ENV=development

# API Configuration
API_VERSION=v1

# Security (Optional - for future enhancements)
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY_SECRET=your-api-key-secret-here

# Database (Optional - for future database integration)
# DATABASE_URL=mongodb://localhost:27017/products-api
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=products_db
# DB_USER=your_db_user
# DB_PASS=your_db_password

# Logging
LOG_LEVEL=info

# Rate Limiting (Optional - for future enhancements)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS (Optional - for future enhancements)
CORS_ORIGIN=http://localhost:3000